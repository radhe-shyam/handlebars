<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=put" method="post">
        <input type="hidden" value="put" name="_method">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" value="{{idea.title}}">
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea type="text" name="details" class="form-control">{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>